{
  "name": "Keep calm",
  "description": "Crowdsourced anti-bullying tool",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "contextMenus",
    "webRequest",
    "*://*.twitter.com/",
    "https://thesigno.com/"
  ],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "manifest_version": 2,
  "background": {
    "scripts": ["menu.js"]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.twitter.com/*"
      ],
      "js": ["background.js"],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'"
}